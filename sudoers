###	SUDOERS.
Defaults	env_reset
Defaults	mail_badpass
Defaults	secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

# Host alias specification

# User alias specification
User_Alias    ADMINS = dav, administrator, soad

# Cmnd alias specification

## SERVICES
Cmnd_Alias SERVICES = /etc/init.d/postfix, /bin/systemctl, /sbin/reboot, /bin/ps, /usr/bin/top, /usr/bin/htop, /usr/bin/tail

# CP
Cmnd_Alias CP = /bin/cp, !/bin/cp /etc/sudoers, !/bin/cp /etc/ssh/sshd_config

# MV
Cmnd_Alias MV = /bin/mv, !/bin/mv /etc/sudoers, !/bin/mv /etc/ssh/sshd_config

# SHELLS
Cmnd_Alias SHELLS = /usr/bin/sh, /usr/bin/csh, /usr/bin/ksh, \
                                /usr/local/bin/tcsh, /usr/bin/rsh, \
                                /usr/local/bin/zsh

## FIREWALLS
Cmnd_Alias FIREWALLS= /sbin/iptables

## Permissions
#Cmnd_Alias DELEGATING = !/usr/bin/sudo -l, !/usr/sbin/visudo, /bin/chown, /bin/chmod, /bin/chgrp

## USERS
Cmnd_Alias USERS = /sbin/adduser, /sbin/useradd, /sbin/userdel, /sbin/deluser, /usr/bin/passwd soad, /usr/bin/passwd root

## SU
Cmnd_Alias SU=/bin/su

## CAT
Cmnd_Alias CAT= /bin/cat, !/bin/cat /etc/passwd, !/bin/cat /etc/sudoers, !/bin/cat /etc/ssh/sshd_config

## EDITORS
Cmnd_Alias NANO= /bin/nano, !/bin/nano /etc/sudoers, !/bin/rnano /etc/sudoers, !/bin/nano /etc/ssh/sshd_config
Cmnd_Alias VIM= /usr/bin/vim, !/usr/bin/vim /etc/sudoers, !/usr/bin/vim /etc/ssh/sshd_config
Cmnd_Alias VI= /usr/bin/vi, !/usr/bin/vi /etc/sudoers, !/usr/bin/vi /etc/ssh/sshd_config
Cmnd_Alias MCE= /usr/bin/mc -e, !/usr/bin/mc -e /etc/sudoers, !/usr/bin/mc -e /etc/ssh/sshd_config

## NETS
Cmnd_Alias NETS= /etc/init.d/networking restart, /sbin/route, /sbin/ifconfig, /bin/ping, \
	/usr/bin/traceroute /usr/sbin/traceroute

## VIEWERS
#Cmnd_Alias VIEWERS= /bin/ls, !/bin/ls /SALVA, !/bin/ls /etc
Cmnd_Alias MCV= /usr/bin/mc -v, !/usr/bin/mc -v /etc/sudoers, !/usr/bin/mc -v /etc/ssh/sshd_config

## APT
Cmnd_Alias APT= /usr/bin/aptitude, /usr/bin/apt-get, /usr/bin/apt

# User privilege specification
root	ALL=(ALL:ALL) ALL
eri	ALL=(ALL:ALL) ALL
yai	ALL=(ALL:ALL) ALL

ADMINS ALL= /usr/bin/passwd [A-Za-z]*, MCV, MCE, CAT, CP, MV, VI, VIM, NANO, NETS, FIREWALLS, SERVICES, !USERS, !SU, !SHELLS

# See sudoers(5) for more information on "#include" directives:

#includedir /etc/sudoers.d
